# PostgreSQL Database Configuration for Local Development
# Copy this file to .env and update the values according to your local setup

# Database Connection
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=petstore_catalog
POSTGRES_USERNAME=your_database_username
POSTGRES_PASSWORD=your_database_password

# R2DBC URL (constructed from above values)
R2DBC_URL=r2dbc:postgresql://${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# Database Pool Configuration
R2DBC_POOL_INITIAL_SIZE=10
R2DBC_POOL_MAX_SIZE=20
R2DBC_POOL_MAX_IDLE_TIME=30m

# Application Configuration
SERVER_PORT=3001
LOG_LEVEL=INFO

# Optional: Admin Database Credentials (for database creation/migration)
POSTGRES_ADMIN_USERNAME=postgres
POSTGRES_ADMIN_PASSWORD=your_admin_password

# Development Settings
SPRING_PROFILES_ACTIVE=development
