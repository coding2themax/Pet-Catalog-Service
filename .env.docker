# Docker Compose Environment Configuration
# Use this file when running the application with docker-compose

# Database Connection (Docker service names)
POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_DB=petstore_catalog
POSTGRES_USERNAME=petstore_user
POSTGRES_PASSWORD=petstore_password

# R2DBC URL for Docker (uses service name 'db')
R2DBC_URL=r2dbc:postgresql://db:5432/petstore_catalog

# Database Pool Configuration
R2DBC_POOL_INITIAL_SIZE=10
R2DBC_POOL_MAX_SIZE=20
R2DBC_POOL_MAX_IDLE_TIME=30m

# Application Configuration
SERVER_PORT=3001
LOG_LEVEL=INFO

# Docker Settings
SPRING_PROFILES_ACTIVE=docker
